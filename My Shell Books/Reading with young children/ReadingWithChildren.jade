		meta(name='lockedDownAsShell', content='true')
		meta(name='bloomBookLineage', content='056B6F11-4A6C-4942-B2BC-8861E62B03B3')
		+styleSheets('HowToBook')
		+cssLink('Factory-XMatter')
		+cssLink('previewMode')
		+cssLink('..\settingsCollectionStyles')
